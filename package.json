{
	"name": "help-desk-backend",
	"version": "0.0.1",
	"description": "HelpDesk app Node.js, Express, API, JWT, Passport.js",
	"main": "src/index.js",
	"scripts": {
		"start": "node dist/server.js",
		"develop": "NODE_ENV=dev nodemon --exec babel-node ./src/server.js",
		"build": "babel src -d dist",
		"debug": "babel src -d dist --watch --source-maps",
		"test": "NODE_ENV=test jest",
		"test:watch": "NODE_ENV=test jest --watch"
	},
	"keywords": [
		"help",
		"desk",
		"node",
		"express",
		"api",
		"jwt",
		"passport.js"
	],
	"author": "Szymon Guzik",
	"license": "MIT",
	"dependencies": {
		"@hapi/joi": "^17.1.1",
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"chalk": "^4.1.0",
		"express": "^4.17.1",
		"express-promise-router": "^4.0.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^5.9.27",
		"morgan": "^1.10.0",
		"passport": "^0.4.1",
		"passport-jwt": "^4.0.0",
		"passport-local": "^1.0.0",
		"swagger-ui-express": "^4.1.4",
		"yamljs": "^0.3.0"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/core": "^7.11.0",
		"@babel/node": "^7.10.5",
		"@babel/preset-env": "^7.11.0",
		"babel-jest": "^26.3.0",
		"babel-plugin-module-resolver": "^4.0.0",
		"eslint": "^7.5.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-import-resolver-babel-module": "^5.1.2",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"jest": "^26.4.2",
		"lint-staged": "^10.2.11",
		"mongodb-memory-server": "^6.6.5",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"supertest": "^4.0.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "npm test"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"pretty-quick --staged",
			"eslint src/ --fix",
			"git add"
		]
	},
	"babel": {
		"presets": [
			[
				"@babel/preset-env",
				{
					"targets": {
						"esmodules": true
					}
				}
			]
		],
		"plugins": [
			[
				"module-resolver",
				{
					"root": [
						"./src"
					],
					"alias": {
						"tests": "./tests",
						"helpers": "./src/helpers"
					}
				}
			]
		]
	},
	"jest": {
		"coveragePathIgnorePatterns": [
			"/node_modules/"
		],
		"setupFilesAfterEnv": [
			"<rootDir>/tests/setupAfterEnv.js"
		],
		"testEnvironment": "node"
	}
}
