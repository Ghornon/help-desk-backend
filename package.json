{
	"name": "help-desk-backend",
	"version": "0.0.1",
	"description": "HelpDesk app Node.js, Express, API, JWT, Passport.js",
	"main": "src/index.js",
	"scripts": {
		"start": "node dist/index.js",
		"develop": "nodemon --exec babel-node ./src/index.js",
		"build": "babel src -d dist",
		"debug": "babel src -d dist --watch --source-maps"
	},
	"keywords": [
		"help",
		"desk",
		"node",
		"express",
		"api",
		"jwt",
		"passport.js"
	],
	"author": "Szymon Guzik",
	"license": "MIT",
	"dependencies": {
		"bcryptjs": "^2.4.3",
		"body-parser": "^1.19.0",
		"chalk": "^4.1.0",
		"express": "^4.17.1",
		"express-promise-router": "^4.0.1",
		"joi": "^17.1.1",
		"jsonwebtoken": "^8.5.1"
	},
	"devDependencies": {
		"@babel/cli": "^7.10.5",
		"@babel/core": "^7.11.0",
		"@babel/node": "^7.10.5",
		"@babel/preset-env": "^7.11.0",
		"eslint": "^7.5.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-config-prettier": "^6.11.0",
		"eslint-plugin-import": "^2.22.0",
		"eslint-plugin-prettier": "^3.1.4",
		"husky": "^4.2.5",
		"lint-staged": "^10.2.11",
		"nodemon": "^2.0.4",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"src/**/*.js": [
			"pretty-quick --staged",
			"eslint src/ --fix",
			"git add"
		]
	},
	"babel": {
		"presets": [
			"@babel/preset-env"
		]
	}
}
