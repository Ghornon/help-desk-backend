{
	"env": {
		"browser": true,
		"es6": true,
		"node": true,
		"jest": true
	},
	"extends": ["airbnb-base", "prettier"],
	"parserOptions": {
		"sourceType": "module"
	},
	"plugins": ["import", "prettier"],
	"rules": {
		"prettier/prettier": ["error"],
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"semi": ["error", "always"],
		"no-console": 1,
		"no-tabs": 0,
		"no-underscore-dangle": ["error", { "allow": ["_id"] }]
	},
	"settings": {
		"import/resolver": {
			"babel-module": {}
		}
	}
}
